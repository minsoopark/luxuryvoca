<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >

        <TextView
            android:id="@+id/wordTextView"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:gravity="center"
            android:textIsSelectable="false"
            android:textSize="28sp" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="@style/ProgressBarVoca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/firstButton" />

        <Button
            android:id="@+id/firstButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/secondButton"
            android:singleLine="true"
            android:tag="0"
            android:textColor="#fff" />

        <Button
            android:id="@+id/secondButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/thirdButton"
            android:singleLine="true"
            android:tag="1"
            android:textColor="#fff" />

        <Button
            android:id="@+id/thirdButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/forthButton"
            android:singleLine="true"
            android:tag="2"
            android:textColor="#fff" />

        <Button
            android:id="@+id/forthButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:singleLine="true"
            android:tag="3"
            android:textColor="#fff" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/oImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:contentDescription="@string/corrected"
        android:src="@drawable/o"
        android:visibility="gone" />

</FrameLayout>